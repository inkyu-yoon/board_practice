{{>layouts/header}}

<form class="container">
    <table class="table">
        <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Title</th>
            <th scope="col">Content</th>
        </tr>
        </thead>
        <tbody class="table-group-divider">
        {{#books}}
            <tr>
                <th>{{id}}</th>
                <th>{{name}}</th>

                {{#publisher}}
                    <th>{{name}}</th>
                {{/publisher}}

                {{#author}}
                    <th>{{name}}</th>
                {{/author}}
            </tr>
        {{/books}}
        </tbody>
    </table>
</form>
