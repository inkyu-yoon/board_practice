{{>layouts/header}}
<form class="container" action="/hospitals" method="get">
    <form class="row g-3">
        <div class="col-auto">
            {{#keyword}}
                <input type="text" class="form-control" name="keyword" value="{{keyword}}" placeholder="지역검색">
            {{/keyword}}
            {{^keyword}}
                <input type="text" class="form-control" name="keyword" placeholder="지역검색">
            {{/keyword}}
        </div>
        <div class="col-auto">
            <button type="submit" class="btn btn-primary mb-3">Search</button>
        </div>
    </form>
</form>

<form class="container">
    <table class="table table-hover">
        <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">병원 이름</th>
            <th scope="col">도로명 주소</th>
        </tr>
        </thead>
        <tbody>
        {{#hospitals}}
            <tr>
                <th scope="row">{{id}}</th>
                <td><a href="/hospital/{{id}}/find">{{hospitalName}}</a></td>

                <td><a href="https://map.naver.com/v5/search/{{roadNameAddress}}"
                       target="_blank">{{roadNameAddress}}</a></td>


            </tr>
        {{/hospitals}}
        </tbody>
    </table>
    <ul class="pagination justify-content-center">
        {{#keyword}}
            <li class="page-item"><a class="page-link" href="?keyword={{keyword}}&page={{previous}}">Previous</a></li>
            <li class="page-item"><a class="page-link" href="?keyword={{keyword}}&page={{next}}">Next</a></li>
        {{/keyword}}
        {{^keyword}}
            <li class="page-item"><a class="page-link" href="?page={{previous}}">Previous</a></li>
            <li class="page-item"><a class="page-link" href="?page={{next}}">Next</a></li>
        {{/keyword}}
    </ul>
</form>
{{>layouts/footer}}